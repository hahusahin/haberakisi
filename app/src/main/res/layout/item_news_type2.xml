<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_news_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <ImageView
            android:id="@+id/iv_source_logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/barrier2"
            tools:src="@drawable/ornek_logo_kare"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/tv_news_source"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textAllCaps="true"
            android:textSize="?attr/news_other_info_phone"
            android:textColor="@color/colorSecondaryText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_source_logo"
            app:layout_constraintBottom_toTopOf="@id/barrier2"
            app:layout_constraintEnd_toStartOf="@id/iv_clock_symbol"
            tools:text="Independent TR"
            tools:textSize="12sp"/>

        <ImageView
            android:id="@+id/iv_clock_symbol"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="1dp"
            app:layout_constraintEnd_toStartOf="@id/tv_news_time"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/barrier2"
            app:srcCompat="@mipmap/ic_clock"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/tv_news_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="6dp"
            android:textColor="@color/colorSecondaryText"
            android:textSize="?attr/news_other_info_phone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/barrier2"
            tools:text="25 Dk. Önce"
            tools:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:textSize="?attr/news_title_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier2"
            tools:textSize="15sp"
            tools:text="Kampta ateşe düşen 7 aylık yeğenini tedavi için İngiltere\'ye getiren Iraklı sığınmacı sınır dışı edilecek" />

        <android.support.constraint.Barrier
            android:id="@+id/barrier2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="iv_source_logo, tv_news_source, iv_clock_symbol, tv_news_time"/>

        <ImageView
            android:id="@+id/iv_news_image"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_news_title"
            tools:src="@drawable/ornek_haber"
            tools:ignore="ContentDescription"/>

        <ImageView
            android:id="@+id/iv_save_news"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="2dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/iv_share_news"
            app:layout_constraintEnd_toStartOf="@id/iv_share_news"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_save_news"
            android:contentDescription="@string/save"/>

        <ImageView
            android:id="@+id/iv_share_news"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="2dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/iv_news_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_share_black"
            android:contentDescription="@string/share"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
