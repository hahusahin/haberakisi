<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="24dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="16dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_news_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <android.support.constraint.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:maxLines="5"
            android:ellipsize="end"
            android:textSize="?attr/news_title_tablet"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_news_summary"
            tools:textSize="21sp"
            tools:text="Kampta ateşe düşen 7 aylık yeğenini tedavi için İngiltere\'ye getiren Iraklı sığınmacı sınır dışı edilecek" />

        <TextView
            android:id="@+id/tv_news_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="4"
            android:ellipsize="end"
            android:textSize="?attr/news_other_info_tablet"
            android:textColor="@color/colorPrimaryText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline1"
            app:layout_constraintTop_toBottomOf="@+id/tv_news_title"
            app:layout_constraintBottom_toTopOf="@+id/barrier2"
            tools:textSize="18sp"
            tools:text="İstanbul, Bayrampaşa Kaymakamlık binası içinde bir kadın polis memuru silahla intihar girişiminde bulundu. Kadın polis hastaneye kaldırılırken, durumunun ağır olduğu öğrenildi" />

        <ImageView
            android:id="@+id/iv_news_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintHeight_min="150dp"
            app:layout_constraintStart_toEndOf="@id/guideline1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/barrier2"
            tools:src="@drawable/ornek_haber"
            tools:ignore="ContentDescription"/>

        <android.support.constraint.Barrier
            android:id="@+id/barrier2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="iv_news_image,tv_news_summary"/>

        <ImageView
            android:id="@+id/iv_source_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="2dp"
            app:layout_constraintTop_toBottomOf="@id/barrier2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/ornek_logo_kare"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/tv_news_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textAllCaps="true"
            android:textSize="?attr/news_other_info_tablet"
            android:textColor="@color/colorSecondaryText"
            app:layout_constraintTop_toBottomOf="@id/barrier2"
            app:layout_constraintStart_toEndOf="@id/iv_source_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="İnternet Haber"
            tools:textSize="18sp"/>

        <ImageView
            android:id="@+id/iv_clock_symbol"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="4dp"
            app:layout_constraintStart_toEndOf="@id/tv_news_source"
            app:layout_constraintTop_toBottomOf="@id/barrier2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@mipmap/ic_clock"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/tv_news_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="6dp"
            android:textColor="@color/colorSecondaryText"
            android:textSize="?attr/news_other_info_tablet"
            app:layout_constraintStart_toEndOf="@id/iv_clock_symbol"
            app:layout_constraintEnd_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/barrier2"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="25 Dakika Önce"
            tools:textSize="18sp"/>

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />

        <ImageView
            android:id="@+id/iv_save_news"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="2dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/barrier2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_save_news"
            android:contentDescription="@string/save"/>

        <ImageView
            android:id="@+id/iv_share_news"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_share_black"
            android:contentDescription="@string/share"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
