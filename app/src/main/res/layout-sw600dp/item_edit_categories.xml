<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="16dp">

    <RelativeLayout
        android:id="@+id/layout_category_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_category_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:adjustViewBounds="true"
            tools:src="@mipmap/letter_g"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_category_icon"
            android:layout_toStartOf="@id/cb_category_selector"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            android:textSize="?attr/source_category_name_tablet"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryText"
            tools:text="GÃ¼ndem"
            tools:textSize="22sp"/>

        <CheckBox
            android:id="@+id/cb_category_selector"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/iv_drag_drop_icon"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:checked="true"/>

        <ImageView
            android:id="@+id/iv_drag_drop_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            app:srcCompat="@mipmap/ic_swipe"
            tools:ignore="ContentDescription"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>