            android:name="com.haberinadresi.androidapp.services.CleanClickedNews"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:exported="false" />
        <service
            android:name="com.haberinadresi.androidapp.services.UpdateMySources"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:exported="false" />
        <service
            android:name="com.haberinadresi.androidapp.services.UpdateMyColumnists"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:exported="false" />
